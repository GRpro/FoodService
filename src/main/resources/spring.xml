<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config />
    <context:component-scan base-package="com.kpi.education.web.rest.resources"/>
    <!-- bean definitions here -->


    <bean id="entityManagerFactory" class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
        <property name="persistenceUnitName" value="unit1"/>
    </bean>

    <!--dao-->

    <bean id="dao" class="com.kpi.education.dao.DAO" abstract="true">
        <constructor-arg name="factory" ref="entityManagerFactory"/>
    </bean>

    <bean id="simpleUserDAO" class="com.kpi.education.dao.SimpleUserDAO" parent="dao"/>
    <bean id="friendshipDAO" class="com.kpi.education.dao.FriendshipDAO" parent="dao"/>
    <bean id="managerUserDAO" class="com.kpi.education.dao.ManagerUserDAO" parent="dao"/>


</beans>